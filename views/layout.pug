doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    link(rel="stylesheet", href="/css/normalize.css")
    link(rel="preconnect" href="https://fonts.gstatic.com/%22")
    link(href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet")
    link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.15.3/css/all.css' integrity='sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk' crossorigin='anonymous')    
    
    link(rel="stylesheet", href="/css/app.css")
    title #{nombrePagina}
  body
    header.barra
      h1 Uptask - Administrador de Proyectos #{year}
      a(href="#") Cerrar Sesi√≥n
    main.contenedor
      aside.contenedor-proyectos
        .panel.crear-proyecto
          a(href="/nuevo-proyecto" class="boton") Nuevo Proyecto
            span +
        .panel.lista-proyectos
          h2 Proyectos
          ul.proyectos#proyectos 
            if (proyectos.length)
              each proyecto in proyectos
                li
                  a(href=`/proyectos/${proyecto.url}`)= proyecto.nombre

      block contenido

      //- pre= vardump(proyectos)
    script(src="/dist/bundle.js") 
